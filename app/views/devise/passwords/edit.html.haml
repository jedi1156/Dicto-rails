.col-md-6.col-md-offset-3
  %h2 Change your password
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = f.error_notification
    = f.input :reset_password_token, input_html: { class: 'form-control' }, :as => :hidden
    = f.full_error :reset_password_token
    .form-group
      = f.input :password, input_html: { class: 'form-control' }, :label => "New password", :required => true, :autofocus => true
      = f.input :password_confirmation, input_html: { class: 'form-control' }, :label => "Confirm your new password", :required => true
    .form-group
      = f.submit, "Change my password", class: 'btn btn-primary'
  = render "devise/shared/links"
